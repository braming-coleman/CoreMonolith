{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenIdConnect": {
    "Authority": "<YOUR_KEYCLOAK_AUTHORITY>",
    "ClientId": "<YOUR_CLIENT_ID>",
    "ClientSecret": "<YOUR_CLIENT_SECRET>"
  },
  "ReverseProxy": {
    "Routes": {
      "publicapi_route": {
        "ClusterId": "publicapi_cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "publicapi_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://CoreMonolith.PublicApi"
          }
        }
      }
    }
  }
}
